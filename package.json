{
  "name": "shaven",
  "version": "1.1.0",
  "description": "Shaven is a simple DOM building utility and template engine based upon JsonML",
  "homepage": "http://adriansieber.com/shaven",
  "keywords": [
    "template",
    "DOM building",
    "JsonML"
  ],
  "bugs": {
    "url": "https://github.com/adius/shaven/issues"
  },
  "license": "ISC",
  "author": "Adrian Sieber <mail@adriansieber.com> (http://adriansieber.com)",
  "main": "build/server",
  "browser": "build/browser",
  "repository": {
    "type": "git",
    "url": "https://github.com/adius/shaven"
  },
  "scripts": {
    "transpile": "babel source/library --out-dir build",
    "buildHTML": "mustache ./package.json source/templates/index.mustache > site/index.html",
    "build": "npm run transpile && webpack && npm run buildHTML",
    "unit-tests": "ava --require babel-register --fail-fast test/node.js test/jsdom.js",
    "lint": "eslint --ignore-path .gitignore .",
    "test": "npm run lint && npm run unit-tests",
    "prepublish": "npm test && npm run build",
    "precommit": "npm run prepublish",
    "prepush": "npm run prepublish"
  },
  "ava": {
    "babel": "inherit"
  },
  "dependencies": {
    "escape-html": "~1.0.1"
  },
  "devDependencies": {
    "ava": "^0.15.2",
    "babel-cli": "^6.6.5",
    "babel-core": "^6.7.4",
    "babel-loader": "^6.2.4",
    "babel-plugin-array-includes": "^2.0.3",
    "babel-preset-es2015": "^6.6.0",
    "babel-register": "^6.7.2",
    "brace": "^0.8.0",
    "css-loader": "^0.23.1",
    "eslint": "^2.13.1",
    "file-loader": "^0.8.5",
    "husky": "^0.11.4",
    "javascript-styleguide": "^0.2.2",
    "jscs": "^3.0.4",
    "jsdom": "^9.2.1",
    "json-loader": "^0.5.4",
    "mustache": "^2.2.1",
    "style-loader": "^0.13.1",
    "stylus": "^0.54.5",
    "stylus-loader": "^2.1.1",
    "url-loader": "^0.5.7",
    "webpack": "^1.12.14"
  },
  "engines": {
    "node": "~0.12.2"
  },
  "directories": {
    "example": "examples",
    "test": "test"
  },
  "eslintConfig": {
    "root": true,
    "extends": "./node_modules/javascript-styleguide/.eslintrc.yaml"
  }
}
