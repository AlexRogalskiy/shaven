{
  "name": "shaven",
  "version": "1.2.0",
  "description": "Shaven is a simple DOM building utility and template engine based on JsonML",
  "homepage": "http://adriansieber.com/shaven",
  "keywords": [
    "template",
    "DOM building",
    "JsonML"
  ],
  "bugs": {
    "url": "https://github.com/adius/shaven/issues"
  },
  "license": "ISC",
  "author": "Adrian Sieber <mail@adriansieber.com> (http://adriansieber.com)",
  "main": "build/server",
  "browser": "build/browser",
  "repository": {
    "type": "git",
    "url": "https://github.com/adius/shaven"
  },
  "scripts": {
    "transpile": "babel source/library --out-dir build",
    "buildHTML": "mustache ./package.json source/templates/index.mustache > site/index.html",
    "build": "npm run transpile && webpack && npm run buildHTML",
    "unit-tests": "ava --fail-fast test/node.js test/jsdom.js",
    "lint": "eslint --ignore-path .gitignore .",
    "test": "npm run lint && npm run unit-tests",
    "prepublish-only": "npm test && npm run build"
  },
  "ava": {
    "babel": "inherit",
    "require": [
      "babel-register"
    ]
  },
  "dependencies": {
    "escape-html": "~1.0.3"
  },
  "devDependencies": {
    "ava": "^0.24.0",
    "babel-cli": "^6.26.0",
    "babel-core": "^6.26.0",
    "babel-loader": "^7.1.2",
    "babel-plugin-array-includes": "^2.0.3",
    "babel-preset-es2015": "^6.24.1",
    "babel-register": "^6.26.0",
    "brace": "^0.11.0",
    "css-loader": "^0.28.9",
    "eslint": "^4.16.0",
    "file-loader": "^1.1.6",
    "javascript-styleguide": "^1.0.0",
    "jscs": "^3.0.7",
    "jsdom": "^11.6.0",
    "json-loader": "^0.5.7",
    "mustache": "^2.3.0",
    "style-loader": "^0.19.1",
    "stylus": "^0.54.5",
    "stylus-loader": "^3.0.1",
    "url-loader": "^0.6.2",
    "webpack": "^3.10.0"
  },
  "engines": {
    "node": "~0.12.2"
  },
  "directories": {
    "example": "examples",
    "test": "test"
  },
  "eslintConfig": {
    "root": true,
    "extends": "./node_modules/javascript-styleguide/.eslintrc.yaml"
  }
}
